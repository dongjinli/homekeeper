#!/bin/sh
SBT_DIR="$HOME/.m2/repository/sbt/launcher"

if [ "$1" = "self-install" ]
then
  if [ -z "$2" ]
  then
    VERSION="0.7.4"
  else
    VERSION="$2"
  fi
  SBT_URL="http://simple-build-tool.googlecode.com/files/sbt-launch-$VERSION.jar"
  mkdir -p "$SBT_DIR/$VERSION"
  wget -O "$SBT_DIR/$VERSION/launcher-$VERSION.jar" "$SBT_URL"
  exit
fi

java -Xmx512M -jar $SBT_DIR/*/launcher-*.jar "$@"
