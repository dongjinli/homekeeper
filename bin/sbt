#!/bin/sh
SBT_VERSION="0.7.4"
SBT_DIR="$HOME/.m2/repository/sbt/launcher/$SBT_VERSION"
SBT_URL="http://simple-build-tool.googlecode.com/files/sbt-launch-$SBT_VERSION.jar"

if [ "$1" = "self-install" ]
then
  mkdir -p "$SBT_DIR"
  wget -O "$SBT_DIR/launcher-$SBT_VERSION.jar" "$SBT_URL"
  exit
fi

java -Xmx512M -jar "$SBT_DIR/launcher-$SBT_VERSION.jar" "$@"
