export M2_HOME=$HOME/opt/maven
export M2_REPO=$HOME/.m2/repository
export NB_HOME=$HOME/opt/netbeans
export CLASSPATH=.:$PES_JAR:$CLASSPATH

###############################################################################
# Scala
###############################################################################
