###############################################################################
# Wmii
###############################################################################
WMII_IS_RUNNING=`ps a | grep wmii | awk '/[^"grep"] wmii$/'`
if [ -n "$WMII_IS_RUNNING" ]; then
  PROMPT_COMMAND='dirs | wmiir write /client/sel/label > /dev/null 2>&1'
fi

###############################################################################
# Bash
###############################################################################
export PATH=$HOME/bin:/sbin:$PATH
export PATH=$M2_HOME/bin:$GEM_HOME/bin:$DEPOT_TOOLS_HOME:$PATH
source $HOME/.bash_aliases
source $HOME/.bash_functions
if [ -e $HOME/.bash_local ]; then
  source $HOME/.bash_local
fi
eval $(dircolors -b $HOME/.dircolors)
promptcolors
